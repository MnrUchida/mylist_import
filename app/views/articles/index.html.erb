<div class="container" >
  <h3>Articles</h3>

  <%= link_to '新規', new_article_path %>
  <div id="articles">
    <% @articles.each do |article| %>
      <div class="row py-3 border" id="<%= dom_id article %>">
        <div class="col-6">
          <%= link_to article.title, article, class: 'link-dark' %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="d-flex border" >
    <%= paginate @articles %>
  </div>
</div>
