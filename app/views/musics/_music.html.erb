<div id="<%= dom_id music %>">
  <div class="row m-2" >
    <div class="col-1 fw-bold">タイトル</div>
    <div class="col-10">
      <%= link_to music.title, music.url, target: :_blank %>
    </div>
  </div>
  <div class="row m-2" data-controller="copy">
    <div class="col-1 fw-bold">タグ</div>
    <div class="col-10" data-copy-target="content">
      <ul>
        <% music.tag_names.each do |tag_name| %>
          <li><%= tag_name %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="row m-2" data-controller="copy">
    <div class="col-1 fw-bold">Note用</div>
    <div class="col">
      <%= button_tag :copy, data: { action: 'click->copy#copy' } %>
    </div>
    <div class="col-10 d-none" data-copy-target="content"><pre><%= music.articles.for_note %></pre></div>
  </div>

  <div id="musics">
    <% music.articles_per_page.each do |article| %>
      <div class="row py-3 border" id="<%= dom_id article %>">
        <div class="col-6">
          <%= link_to article.title, article_path(article), class: 'link-dark' %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="d-flex border" >
    <%= paginate music.articles_per_page %>
  </div>
</div>
